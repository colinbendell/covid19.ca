<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
{#    <link rel="stylesheet" href="{{ 'css/default.css' | url }}">#}
{#    <link rel="stylesheet" href="{{ 'css/chartsCSS-0.9.0.css' | url }}" media="print" onload="this.media='all'">#}
    <!-- capture the CSS content as a Nunjucks variable -->
    {% set css %}
      {% include "css/reset.css" %}
      {% include "css/chartsCSS-0.9.0.css" %}
      {% include "css/toggle.css" %}
      {% include "css/progressbar.css" %}
      {% include "css/default.css" %}
    {% endset %}
    <!-- feed it through our cssmin filter to minify -->
    <style>
      {{ css | cssmin | safe }}
    </style>
  </head>
  <body>
    <header>
      <h1 class="home">
        <a href="{{ '/' | url }}">{{ title or metadata.title }}</a>
      </h1>
      <span class="links">
      <a href="https://github.com/colinbendell/covid19.ca/" title="Github Source">
        <img src="img/github.svg" width="64" height="64" alt="">
      </a>
      <a href="/data.json" title="{raw} source data"><img src="img/analytics.svg" width="64" height="64" alt=""></a>
      </span>
{#      #}{#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
{#      <ul class="nav">#}
{#      {%- for entry in collections.all | eleventyNavigation %}#}
{#        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}"><a href="{{ entry.url | url }}">{{ entry.title }}</a></li>#}
{#      {%- endfor %}#}
{#      </ul>#}
    </header>
    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer>

    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
